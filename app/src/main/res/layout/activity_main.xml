<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearBackground"
    android:orientation="vertical"
    android:background="@drawable/heavy_rain_bb"
    tools:context=".MainActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_marginTop="23dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:contentInsetStart="30dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/marydale_bold"
                android:text="mr.Weather"
                android:textColor="@color/putih"
                android:textSize="18sp" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

  <android.support.v4.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@android:color/transparent"
          android:orientation="vertical">

          <TextView
              android:id="@+id/tittle"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="5dp"
              android:fontFamily="@font/helvetica_neu_bold"
              android:text="-"
              android:textAlignment="center"
              android:textColor="@color/putih"
              android:textSize="24sp" />

          <TextView
              android:id="@+id/tanggal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="15dp"
              android:fontFamily="@font/helvetica_neu_bold"
              android:text="-"
              android:textAlignment="center"
              android:textColor="@color/putih"
              android:textSize="18sp" />

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="15dp"
              android:background="@drawable/rounded_putih"
              android:orientation="horizontal"
              android:padding="15dp">

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

                  <RelativeLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">


                      <ImageView
                          android:id="@+id/image_weather"
                          android:layout_width="250dp"
                          android:layout_height="200dp"
                          android:layout_gravity="center_horizontal"
                          android:src="@drawable/logoo" />

                      <TextView
                          android:id="@+id/temperature"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:fontFamily="@font/marydale_bold"
                          android:maxLength="2"
                          android:textColor="@color/biru2"
                          android:textSize="35sp" />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_toRightOf="@id/temperature"
                          android:fontFamily="@font/marydale_bold"
                          android:maxLength="2"
                          android:text="째C"
                          android:textColor="@color/biru2"
                          android:textSize="35sp" />

                  </RelativeLayout>

                  <TextView
                      android:id="@+id/weather_stat"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
                      android:fontFamily="@font/helvetica_neu_bold"
                      android:textAlignment="center"
                      android:textColor="@color/biru2"
                      android:textSize="18sp" />

              </LinearLayout>

          </LinearLayout>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="20dp"
              android:layout_marginTop="20dp"
              android:layout_marginRight="20dp"
              android:fontFamily="@font/helveticaneue_medium"
              android:text="Details"
              android:textColor="@color/putih"
              android:textSize="18sp" />

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="20dp"
              android:layout_marginTop="20dp"
              android:background="@drawable/rounded_putih"
              android:orientation="horizontal"
              android:padding="15dp"
              android:weightSum="3">


              <LinearLayout
                  android:id="@+id/linear4"
                  android:layout_width="52dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical">

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:fontFamily="@font/helveticaneue_medium"
                      android:text="Wind speed:"
                      android:textAlignment="center"
                      android:textColor="@color/biru2"
                      android:textSize="14sp" />

                  <View
                      android:layout_width="100dp"
                      android:layout_height="1px"
                      android:layout_gravity="center_horizontal"
                      android:layout_margin="5dp"
                      android:background="@color/biru2" />

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:orientation="horizontal">

                      <TextView
                          android:id="@+id/windSpeed"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:fontFamily="@font/helveticaneue_medium"
                          android:maxLength="4"
                          android:text="-"
                          android:textAlignment="center"
                          android:textColor="@color/biru2"
                          android:textSize="15sp" />

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:fontFamily="@font/helveticaneue_medium"
                          android:text=" mph"
                          android:textAlignment="center"
                          android:textColor="@color/biru2"
                          android:textSize="15sp" />

                  </LinearLayout>


              </LinearLayout>

              <LinearLayout
                  android:id="@+id/linear5"
                  android:layout_width="52dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical">

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:fontFamily="@font/helveticaneue_medium"
                      android:text="Air pressure:"
                      android:textAlignment="center"
                      android:textColor="@color/biru2"
                      android:textSize="14sp" />

                  <View
                      android:layout_width="100dp"
                      android:layout_height="1px"
                      android:layout_gravity="center_horizontal"
                      android:layout_margin="5dp"
                      android:background="@color/biru2" />

                  <TextView
                      android:id="@+id/airPressure"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:fontFamily="@font/helveticaneue_medium"
                      android:maxLength="4"
                      android:text="-"
                      android:textAlignment="center"
                      android:textColor="@color/biru2"
                      android:textSize="15sp" />


              </LinearLayout>

              <LinearLayout
                  android:id="@+id/linear6"
                  android:layout_width="50dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical">

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:fontFamily="@font/helveticaneue_medium"
                      android:text="Humidity:"
                      android:textAlignment="center"
                      android:textColor="@color/biru2"
                      android:textSize="14sp" />

                  <View
                      android:layout_width="100dp"
                      android:layout_height="1px"
                      android:layout_gravity="center_horizontal"
                      android:layout_margin="5dp"
                      android:background="@color/biru2" />

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:orientation="horizontal">

                      <TextView
                          android:id="@+id/huidity"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:fontFamily="@font/helveticaneue_medium"
                          android:maxLength="3"
                          android:text="-"
                          android:textAlignment="center"
                          android:textColor="@color/biru2"
                          android:textSize="15sp" />

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:fontFamily="@font/helveticaneue_medium"
                          android:maxLength="4"
                          android:text="%"
                          android:textAlignment="center"
                          android:textColor="@color/biru2"
                          android:textSize="15sp" />

                  </LinearLayout>

              </LinearLayout>

          </LinearLayout>


          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="20dp"
              android:layout_marginRight="20dp"
              android:background="@drawable/rounded_putih"
              android:orientation="horizontal"
              android:padding="15dp"
              android:weightSum="3">


              <LinearLayout
                  android:id="@+id/linear1"
                  android:layout_width="50dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:orientation="vertical">

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:fontFamily="@font/helveticaneue_medium"
                      android:text="Max Temp:"
                      android:textAlignment="center"
                      android:textColor="@color/biru2"
                      android:textSize="14sp" />

                  <View
                      android:layout_width="100dp"
                      android:layout_height="1px"
                      android:layout_gravity="center_horizontal"
                      android:layout_margin="5dp"
                      android:background="@color/biru2" />

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:orientation="horizontal">

                      <TextView
                          android:id="@+id/maxTemp"
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:fontFamily="@font/helveticaneue_medium"
                          android:maxLength="2"
                          android:text="-"
                          android:textAlignment="center"
                          android:textColor="@color/biru2"
                          android:textSize="15sp" />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:fontFamily="@font/helveticaneue_medium"
                          android:maxLength="2"
                          android:text="째C"
                          android:textAlignment="center"
                          android:textColor="@color/biru2"
                          android:textSize="15sp" />
                  </LinearLayout>

              </LinearLayout>

              <LinearLayout
                  android:id="@+id/linear2"
                  android:layout_width="50dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:orientation="vertical">

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:fontFamily="@font/helveticaneue_medium"
                      android:text="The Temp:"
                      android:textAlignment="center"
                      android:textColor="@color/biru2"
                      android:textSize="14sp" />

                  <View
                      android:layout_width="100dp"
                      android:layout_height="1px"
                      android:layout_gravity="center_horizontal"
                      android:layout_margin="5dp"
                      android:background="@color/biru2" />

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:orientation="horizontal">

                      <TextView
                          android:id="@+id/theTemp"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:fontFamily="@font/helveticaneue_medium"
                          android:maxLength="2"
                          android:text="-"
                          android:textAlignment="center"
                          android:textColor="@color/biru2"
                          android:textSize="15sp" />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:fontFamily="@font/helveticaneue_medium"
                          android:maxLength="2"
                          android:text="째C"
                          android:textAlignment="center"
                          android:textColor="@color/biru2"
                          android:textSize="15sp" />

                  </LinearLayout>


              </LinearLayout>

              <LinearLayout
                  android:id="@+id/linear3"
                  android:layout_width="50dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:orientation="vertical">

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:fontFamily="@font/helveticaneue_medium"
                      android:text="Min Temp:"
                      android:textAlignment="center"
                      android:textColor="@color/biru2"
                      android:textSize="14sp" />

                  <View
                      android:layout_width="100dp"
                      android:layout_height="1px"
                      android:layout_gravity="center_horizontal"
                      android:layout_margin="5dp"
                      android:background="@color/biru2" />


                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:orientation="horizontal">

                      <TextView
                          android:id="@+id/minTemp"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:fontFamily="@font/helveticaneue_medium"
                          android:maxLength="2"
                          android:text="-"
                          android:textAlignment="center"
                          android:textColor="@color/biru2"
                          android:textSize="15sp" />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:fontFamily="@font/helveticaneue_medium"
                          android:maxLength="2"
                          android:text="째C"
                          android:textAlignment="center"
                          android:textColor="@color/biru2"
                          android:textSize="15sp" />

                  </LinearLayout>

              </LinearLayout>

          </LinearLayout>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="20dp"
              android:fontFamily="@font/helveticaneue_medium"
              android:text="History of today"
              android:textColor="@color/putih"
              android:textSize="18sp" />

          <android.support.v7.widget.RecyclerView
              android:id="@+id/recyclerHistory"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


          </android.support.v7.widget.RecyclerView>


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="20dp"
              android:fontFamily="@font/helveticaneue_medium"
              android:text="Next Day"
              android:textColor="@color/putih"
              android:textSize="18sp" />

          <android.support.v7.widget.RecyclerView
              android:id="@+id/recNext"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="20dp"></android.support.v7.widget.RecyclerView>

      </LinearLayout>

  </android.support.v4.widget.NestedScrollView>
</LinearLayout>